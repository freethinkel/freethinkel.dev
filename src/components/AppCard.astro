---
interface Props {
  photo: string;
  name: string;
  path: string;
}

const { photo, path, name } = Astro.props;
---

<div class="wrapper">
  <a href={path}>
    <img src={photo} alt={name} />
  </a>
  <div class="name">{name}</div>
</div>

<style>
  .wrapper {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
  }
  a {
    --size: 120px;
    transition: 0.1s;
    transform: scale(1.2);

    &:hover {
      transform: scale(1.3);
    }
  }
  img {
    max-height: var(--size);
    max-width: var(--size);

    width: 100%;
    height: 100%;
  }
</style>
